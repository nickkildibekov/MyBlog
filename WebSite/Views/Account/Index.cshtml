@model IEnumerable<Common.Models.ApplicationUser>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink( "Create New", "Register", "Account" )
    </p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">User name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 0;
            }


            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row" class ="text-center">@counter</th>
                    <td>@Html.DisplayFor( modelItem => item.UserName )</td>
                    <td>@Html.DisplayFor( modelItem => item.Email )</td>

                    <td class="text-center">
                        @Ajax.ActionLink( "Edit", "Edit", "Account", new { id = item.Id },
                        new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "main_area" }, htmlAttributes: new { @class = "btn btn-secondary" }
                        )
                        @Ajax.ActionLink( "Delete", "Delete", "Account", new { id = item.Id },
                            new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "main_area" }, htmlAttributes: new { @class = "btn btn-secondary" }
                            )
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
