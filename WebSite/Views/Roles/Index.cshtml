@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    @Html.ActionLink( "Create New", "Create", "Roles" )
</p>
<table class="table table-hover table-bordered">
    <thead>
    <tr class="text-center">
        <th scope="col">#</th>
        <th scope="col">Role name</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @{
        int counter = 0;
    }


    @foreach (var item in Model)
    {
        counter++;
        <tr>
            <th scope="row" class="text-center">@counter</th>
            <td>@Html.DisplayFor( modelItem => item.Name )</td>
            <td class="text-center">
                @Ajax.ActionLink( "Edit", "Edit", "Roles", new { id = item.Id },
                    new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "main_area" }, htmlAttributes: new { @class = "btn btn-secondary" }
                    )
                @Ajax.ActionLink( "Delete", "Delete", "Roles", new { id = item.Id },
                    new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "main_area" }, htmlAttributes: new { @class = "btn btn-secondary" }
                    )
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>
